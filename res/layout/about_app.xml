<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button"
        android:layout_below="@+id/title"
        android:layout_marginBottom="25dip"
        android:layout_marginTop="15dip"
        android:fillViewport="true" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="709dp"
            android:layout_marginTop="10dip"
            android:stretchColumns="1" >

            <TableRow android:id="@+id/tableRow1" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/pic"
                    android:src="@drawable/ic_launcher1" />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="3dip"
                    android:text="@string/napon" />
            </TableRow>

            <TableRow android:id="@+id/tableRow2" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/pic"
                    android:src="@drawable/ic_launcher2" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="3dip"
                    android:text="@string/sunny" >
                </TextView>
            </TableRow>

            <TableRow android:id="@+id/tableRow3" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/pic"
                    android:gravity="left"
                    android:src="@drawable/ic_launcher3" />

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="3dip"
                    android:text="@string/daniel" >
                </TextView>
            </TableRow>

            <TableRow android:id="@+id/tableRow4" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/pic"
                    android:gravity="left"
                    android:src="@drawable/ic_launcher4" />

                <TextView
                    android:id="@+id/name4"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="3dip"
                    android:text="@string/bryan" >
                </TextView>
            </TableRow>

            <TableRow android:id="@+id/tableRow5" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/pic"
                    android:gravity="left"
                    android:src="@drawable/ic_launcher5" />

                <TextView
                    android:id="@+id/name5"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="3dip"
                    android:text="@string/amelia" >
                </TextView>
            </TableRow>

            <TableRow android:id="@+id/tableRow6" >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/pic"
                    android:gravity="left"
                    android:src="@drawable/ic_launcher6" />

                <TextView
                    android:id="@+id/name6"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="3dip"
                    android:text="@string/paul" >
                </TextView>
            </TableRow>
        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#6600CC"
        android:text="@string/share" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dip"
        android:text="@string/the_team"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>